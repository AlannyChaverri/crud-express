<% include ../layouts/header.ejs %>
<a class="btn btn-primary" href="/libros/crear" type="button">Agregar un nuevo libro</a>
<br>
<br>
<table class="table table-primary" style="text-align: center;">
  <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Imagen</th>
      <th>Accion</th>
    </tr>
  </thead>
  <tbody>
    <% for( let libro = 0; libro < libros.length; libro++ ) { %>
    <tr>
      <td> <%=libros[libro].id %> </td>
      <td> <%=libros[libro].nombre %></td>
      <td> <img class="img-thumbnail" width="100" src="images/<%=libros[libro].imagen %>" alt=""> </td>
      <td>
        <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
          <form class="form-inline" method="get" action="/libros/editar/<%=libros[libro].id%>">
            <button class="btn btn-info" type="submit"><i class="fa-solid fa-pen-to-square"></i></button>
          </form>
        </div>
        |
        <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
          <form class="form-inline" method="post" action="/libros/eliminar/<%=libros[libro].id%>">
            <button class="btn btn-danger" type="submit"><i class="fa-solid fa-trash"></i></button>
          </form>
        </div>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
<% include ../layouts/footer.ejs %>