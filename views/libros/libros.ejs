<% include ../layouts/header.ejs %> 
            <a class="btn btn-primary" href="/libros/crear" type="button">Agregar un nuevo libro</a>
            <br>
            <br>
            <table class="table table-primary" style="text-align: center;">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Imagen</th>
                        <th>Accion</th>
                    </tr>
                </thead>
                <tbody>
                    <% for( let libro = 0; libro < libros.length; libro++ ) { %>
                        <tr>
                            <td> <%=libros[libro].id %>  </td>
                            <td> <%=libros[libro].nombre %></td>
                            <td> <%=libros[libro].imagen %> </td>
                            <td> Eliminar | Editar </td>
                        </tr> 
                    <% } %>                   
                </tbody>
            </table>
            <% include ../layouts/footer.ejs %> 