<% include ../layouts/header.ejs %> 

<form method="post" action="../actualizar/" enctype="multipart/form-data">
    <input type="hidden" name="id" id="id" value="<%=libro.id %> ">
<div class="form-group">
    <label for="nombre">Nombre</label>
    <input value="<%=libro.nombre %> " id="nombre" class="form-control" type="text" name="nombre">
</div>

<div class="form-group">
    <label for="archivo">Imagen</label>
    <img class="img-thumbnail" width="100" src="../../images/<%=libro.imagen %> " alt=""><br><br>
    <input id="archivo" class="form-control-file" type="file" name="archivo">
</div>
<button class="btn btn-primary" type="submit">Actualizar</button>
</form>

<% include ../layouts/footer.ejs %> 